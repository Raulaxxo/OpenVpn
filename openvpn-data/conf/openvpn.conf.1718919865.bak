server 10.16.48.0 255.255.255.0
verb 3
key /etc/openvpn/pki/private/100.100.40.12.key
ca /etc/openvpn/pki/ca.crt
cert /etc/openvpn/pki/issued/100.100.40.12.crt
dh /etc/openvpn/pki/dh.pem
tls-auth /etc/openvpn/pki/ta.key
key-direction 0
keepalive 10 60
persist-key
persist-tun

proto udp
# Rely on Docker to do port mapping, internally always 1194
port 1194
dev tun0
status /tmp/openvpn-status.log

user nobody
group nogroup
comp-lzo no

### Route Configurations Below
route 192.168.254.0 255.255.255.0

### Push Configurations Below
push "block-outside-dns"
push "dhcp-option DNS 172.31.3.141"
push "comp-lzo no"
### Debo dejar fuera de este ruteo la ip publica del servidor donde esta la VPN
push "route 100.100.40.12 255.255.255.255 net_gateway"
### Rutas de VPN
push "route 10.16.48.0 255.255.255.0"
### IP Privada del servidor de la VPN
push "route 10.10.1.12 255.255.255.255"
